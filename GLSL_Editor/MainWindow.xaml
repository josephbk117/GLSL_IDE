<Window x:Class="GLSL_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GLSL_Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="348" Width="706">
    <Grid>
        <RichTextBox Margin="10" Background="#FF83A894" Name="glslTextBox" KeyUp="TextBox_keyUp">
            <FlowDocument LineHeight="3" PagePadding="0">
                <Paragraph Background="#FF356E52">
                    <Run Text="# Version 140" Foreground="White"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
