<Window x:Class="GLSL_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GLSL_Editor"
        mc:Ignorable="d"
        Title="GLSL Editor" Height="496" Width="706" MinWidth="700" MinHeight="490">
    <Window.Resources>
        <SolidColorBrush Color="#FF3B2147" x:Key="bgBrush"/>
        <SolidColorBrush Color="#FF624D6C" x:Key="subBrush"/>
        <SolidColorBrush Color="#FFB0A0BD" x:Key="tertBrush"/>
    </Window.Resources>
    <Grid Background="{StaticResource subBrush}">
        <Grid VerticalAlignment="Top" Height="35" Background="{StaticResource bgBrush}">
            <Rectangle HorizontalAlignment="Left" Height="25" Stroke="White" VerticalAlignment="Top" Width="80" StrokeThickness="2" Margin="5,5,0,0" Fill="#33FFFFFF" MouseLeftButtonUp="ToolBar_SaveButton_OnLeftMouseUp" MouseLeftButtonDown="GenericButton_OnMouseDown"/>
            <Label Content="SAVE" Width="80" Margin="5,3,0,5" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Foreground="White" VerticalContentAlignment="Top" FontSize="14" IsHitTestVisible="False"/>

            <Rectangle HorizontalAlignment="Left" Height="25" Stroke="White" VerticalAlignment="Top" Width="97" StrokeThickness="2" Margin="90,5,0,0" MouseLeftButtonDown="GenericButton_OnMouseDown" Fill="#33FFFFFF"/>
            <Label Content="SAVE AS" Width="97" Margin="90,3,0,5" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Foreground="White" VerticalContentAlignment="Top" FontSize="14" IsHitTestVisible="False" Background="{x:Null}"/>

            <Rectangle HorizontalAlignment="Left" Height="25" Stroke="White" VerticalAlignment="Top" Width="102" StrokeThickness="2" Margin="192,5,0,0" Fill="#33FFFFFF" MouseLeftButtonDown="GenericButton_OnMouseDown" MouseLeftButtonUp="OptionsModalWindow_OnMouseLeftButtonUp"/>
            <Label Content="OPTIONS" Width="102" Margin="192,3,0,5" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Foreground="White" VerticalContentAlignment="Top" FontSize="14" IsHitTestVisible="False" Background="{x:Null}"/>

            <Rectangle HorizontalAlignment="Right" Height="25" Stroke="White" VerticalAlignment="Top" Width="80" StrokeThickness="2" Margin="5,5,5,0" Fill="#33FFFFFF" MouseLeftButtonUp="ToolBar_RunButton_OnLeftMouseUp" MouseLeftButtonDown="GenericButton_OnMouseDown"/>
            <Label Content="RUN" Width="80" Margin="5,3,5,5" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Foreground="White" VerticalContentAlignment="Top" FontSize="14" IsHitTestVisible="False"/>

        </Grid>
        <Grid Margin="0,0,0,0" Background="{StaticResource bgBrush}" Height="136" VerticalAlignment="Bottom">
            <Rectangle HorizontalAlignment="Left" Height="25" Stroke="White" VerticalAlignment="Top" Width="80" StrokeThickness="2" Margin="0,5,0,0" Fill="#33FFFFFF" MouseLeftButtonUp="DebugWindow_ClearButtonOnLeftMouseButtonUp" MouseLeftButtonDown="GenericButton_OnMouseDown"/>
            <Label Content="CLEAR" Width="80" Margin="0,3,0,106" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Foreground="White" VerticalContentAlignment="Top" FontSize="14" IsHitTestVisible="False"/>
            <TextBox x:Name="debugTextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" Background="{StaticResource subBrush}" Foreground="White" BorderBrush="{x:Null}" Margin="0,35,0,0"/>
        </Grid>
        <!--- THE MODAL WINDOW SHOW SECTION-->
        <Grid Margin="0" Background="#66000000" Name="coverGrid" Visibility="Hidden" Panel.ZIndex="6">
            <Grid Width="350" Height="150" Background="#7FFFFFFF" Name="saveAndIdeErrorGrid" Visibility="Hidden">
                <Label Name="saveAndIdeErrorGrid_Toplabel" Content="Vertex/Fragment shader saved" Margin="0,0,0,115" HorizontalContentAlignment="Center" FontSize="13" Foreground="White"/>
                <Label Name="saveAndIdeErrorGrid_SubLabel" Content="safe file name" Margin="0,30,0,90" HorizontalContentAlignment="Center" FontSize="12" Foreground="White"/>
                <Rectangle Margin="90,100,90,10" Fill="#66000000"/>
                <Label Name ="saveAndIdeErrorGrid_Buttonlabel" Content="Text" Margin="90,100,90,10" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" MouseLeftButtonUp="ModalWindowButton_OnMouseUp"/>
            </Grid>

            <Grid Width="440" Height="340" Background="#99FFFFFF" Name="optionsGrid" Visibility="Hidden">
                <Label Content="Default vertex shader extension : " Height="27" VerticalAlignment="Top" HorizontalContentAlignment="Right" FontSize="14" HorizontalAlignment="Left" Width="237" Foreground="White"/>
                <TextBox Name="vertexExtensionText" Height="22" Margin="0,5,10,0" TextWrapping="Wrap" Text=".vs" VerticalAlignment="Top" HorizontalAlignment="Right" Width="188" HorizontalContentAlignment="Center" Background="#4CFFFFFF" Foreground="White"/>

                <Label Content="Default fragment shader extension : " Height="30" VerticalAlignment="Top" HorizontalContentAlignment="Right" FontSize="14" HorizontalAlignment="Left" Width="237" Margin="0,32,0,0" Foreground="White"/>
                <TextBox Name="fragmentExtensionText" Height="22" Margin="0,37,10,0" TextWrapping="Wrap" Text=".fs" VerticalAlignment="Top" HorizontalAlignment="Right" Width="188" HorizontalContentAlignment="Center" Background="#4CFFFFFF" Foreground="White"/>

                <Rectangle Name="optionSetButton" Margin="150,0,150,10" Fill="#4C000000" Height="35" VerticalAlignment="Bottom" MouseLeftButtonUp="ModalWindowButton_OnMouseUp"/>
                <Label Content="SET" Margin="150,295,150,10" FontSize="20" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsHitTestVisible="False"/>

                <Rectangle Margin="0,64,0,0" Fill="White" Height="4" VerticalAlignment="Top"/>
                <Label Content="Window Colour Scheme" Margin="0,64,0,0" Height="28" VerticalAlignment="Top" Foreground="White" HorizontalContentAlignment="Center" FontSize="15" VerticalContentAlignment="Top"/>
                <Slider Name="bgColour_R" Margin="10,94,300,0" VerticalAlignment="Top" Background="Red" ValueChanged="Colour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>
                <Slider Name="bgColour_G" Margin="10,112,300,0" VerticalAlignment="Top" Background="Lime" ValueChanged="Colour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>
                <Slider Name="bgColour_B" Margin="10,130,300,0" VerticalAlignment="Top" Background="Blue" ValueChanged="Colour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>

                <Slider Name="subColour_R" Margin="150,94,160,0" VerticalAlignment="Top" Background="Red" ValueChanged="SubColour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>
                <Slider Name="subColour_G" Margin="150,112,160,0" VerticalAlignment="Top" Background="Lime" ValueChanged="SubColour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>
                <Slider Name="subColour_B" Margin="150,130,160,0" VerticalAlignment="Top" Background="Blue" ValueChanged="SubColour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>

                <Slider Name="tertColour_R" Margin="290,92,10,0" VerticalAlignment="Top" Background="Red" ValueChanged="TertColour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>
                <Slider Name="tertColour_G" Margin="290,110,10,0" VerticalAlignment="Top" Background="Lime" ValueChanged="TertColour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>
                <Slider Name="tertColour_B" Margin="290,128,10,0" VerticalAlignment="Top" Background="Blue" ValueChanged="TertColour_SliderValueChanged" SmallChange="1" LargeChange="5" Maximum="255" Minimum="1"/>

                <Rectangle Margin="0,153,0,0" Fill="White" Height="4" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <TabControl Margin="0,35,0,136" TabStripPlacement="Left" BorderBrush="White" BorderThickness="0">
            <TabItem Header="Shader set 1" BorderBrush="{x:Null}" Margin="-2,-3,1,-5" Foreground="{StaticResource tertBrush}">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="#FFCDCDCD" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="{StaticResource subBrush}">
                    <TabControl BorderThickness="0" x:Name="tabControl" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}">
                        <TabItem Header="Vertex Shader" Background="{StaticResource bgBrush}" BorderBrush="{x:Null}" Foreground="{StaticResource tertBrush}" Margin="35,0,-40,0">
                            <Grid Background="#FFE5E5E5" Margin="-2,0,0,-3">
                                <RichTextBox x:Name="lineNumberVertex_TextBox" HorizontalAlignment="Left" IsReadOnly="True" Width="37" FontFamily="consolas" FontSize="14" Background="{StaticResource bgBrush}" Foreground="{StaticResource tertBrush}" BorderBrush="White">
                                    <FlowDocument x:Name="lineNumberVertex_FlowDoc" LineHeight="3" PagePadding="0">
                                        <Paragraph>
                                            <Run Text="1"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                                <ScrollViewer x:Name="vertexScrollBar" ScrollChanged="ScrollViewer_ScrollChanged">
                                    <RichTextBox AcceptsTab="True" Margin="37,0,0,0" Background="{StaticResource subBrush}" x:Name="glslVertexTextbox" KeyUp="TextBox_keyUp" FontFamily="Consolas" FontSize="14" BorderBrush="White" Loaded="RichTextbox_OnLoaded">
                                        <FlowDocument LineHeight="3" PagePadding="0">
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text="# version 140" Foreground="White"/>
                                            </Paragraph>
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text="void main()" Foreground="White"/>
                                            </Paragraph>
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text=" {" Foreground="White"/>
                                            </Paragraph>
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text=" }" Foreground="White"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Fragment Shader" BorderBrush="{x:Null}" Background="{StaticResource bgBrush}" Foreground="{StaticResource tertBrush}" Margin="44,0,-44,0">
                            <Grid Background="#FFE5E5E5" Margin="-2,0,0,-3">
                                <RichTextBox x:Name="lineNumberFragment_TextBox" HorizontalAlignment="Left" IsReadOnly="True" Width="37" FontFamily="consolas" FontSize="14" Background="{StaticResource bgBrush}" Foreground="{StaticResource tertBrush}" BorderBrush="White">
                                    <FlowDocument x:Name="lineNumberFrag_FlowDoc" LineHeight="3" PagePadding="0">
                                        <Paragraph>
                                            <Run Text="1"/>
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                                <ScrollViewer x:Name="fragmentScrollBar" ScrollChanged="ScrollViewer_ScrollChanged">
                                    <RichTextBox AcceptsTab="True" Margin="37,0,0,0" Background="{StaticResource subBrush}" x:Name="glslFragmentTextbox" KeyUp="TextBox_keyUp" FontFamily="Consolas" FontSize="14" BorderBrush="White" Loaded="RichTextbox_OnLoaded">
                                        <FlowDocument LineHeight="3" PagePadding="0">
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text="# version 140" Foreground="White"/>
                                            </Paragraph>
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text="void main()" Foreground="White"/>
                                            </Paragraph>
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text=" {" Foreground="White"/>
                                            </Paragraph>
                                            <Paragraph Background="{StaticResource bgBrush}">
                                                <Run Text=" }" Foreground="White"/>
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </ScrollViewer>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
